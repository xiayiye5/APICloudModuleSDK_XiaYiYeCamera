<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edit_box_bg"
    android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@drawable/shape_color"
            android:gravity="center"
            android:text="@string/title_online_video"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
        <RadioGroup
            android:id="@+id/vf_rg_loaanddownlad"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_height="34dp"
            android:orientation="horizontal" >

            <RadioButton
                android:singleLine="true"
                android:id="@+id/vf_radio_online"
                android:layout_width="85dp"
                android:layout_height="34dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/radio_btn_picture_fragment_left_bg"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/video_fragment_online_btn"
                android:textColor="@drawable/radio_button_font_style"
                android:textSize="16sp" />
            <RadioButton
                android:singleLine="true"
                android:text="@string/video_fragment_local_btn"
                android:id="@+id/vf_radio_local"
                android:layout_width="85dp"
                android:layout_height="34dp"
                android:background="@drawable/radio_btn_picture_fragment_right_bg"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/radio_button_font_style"
                android:textSize="16sp" />
        </RadioGroup>

    <ListView
        android:layout_marginTop="5dp"
        android:id="@+id/video_fragment_camera_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_camera_fragment_main_bg"
        android:divider="@color/radio_bg_normal"
        android:dividerHeight="1dip" />

</LinearLayout>