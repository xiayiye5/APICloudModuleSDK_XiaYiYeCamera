<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.hichip.thecamhi.base.TitleView
        android:id="@+id/rf_alarmlog_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.hichip.thecamhi.base.TitleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/shape_gradient_eee"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_before_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/before_day"
            android:textColor="@drawable/selector_check_code_tv" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_after_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:enabled="false"
            android:text="@string/after_day"
             android:textSize="16sp"
            android:textColor="@drawable/selector_check_code_tv" />

        <ImageView
            android:layout_width="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="22dp"
            android:background="#999999" />

        <TextView
            android:id="@+id/tv_rf_log_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/all_types"
             android:textSize="16sp"
            android:textColor="@color/color_bule_txt" />
    </LinearLayout>

    <com.hichip.customview.mtrefreshlistview.MeiTuanListView
        android:id="@+id/lv_alarm_log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" >
    </com.hichip.customview.mtrefreshlistview.MeiTuanListView>

</LinearLayout>