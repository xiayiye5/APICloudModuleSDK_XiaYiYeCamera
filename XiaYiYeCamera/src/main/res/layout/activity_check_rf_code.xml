<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edit_box_bg"
    android:orientation="vertical" >

    <com.hichip.thecamhi.base.TitleView
        android:id="@+id/rf_code_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.hichip.thecamhi.base.TitleView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="3dp"
        android:text="*请先将传感器靠近摄像机,再点击下方&apos;开始配对&apos;,同时触发传感器"
        android:textColor="#2DA5FC"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" >

        <ImageView
            android:id="@+id/iv_radar_11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:src="@drawable/radar_11" />
        <ImageView
            android:id="@+id/iv_radar_22"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:src="@drawable/radar_22" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_check_code"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_check_code"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="开始配对"
        android:textColor="@drawable/selector_check_code_tv" />

</LinearLayout>