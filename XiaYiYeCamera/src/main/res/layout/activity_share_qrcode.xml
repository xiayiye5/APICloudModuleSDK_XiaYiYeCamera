<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edit_box_bg" >

    <com.hichip.thecamhi.base.TitleView
        android:id="@+id/title_share_qrcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.hichip.thecamhi.base.TitleView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_qrcode"
        android:gravity="center_horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="5dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
             />

        <TextView
            android:id="@+id/tv_camera_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#666666"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_save_to_phone"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_check_code"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="16sp"
            android:text="@string/to_album"
            android:textColor="#2DA5FC" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/shape_check_code"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="16sp"
            android:text="@string/tips_share"
            android:textColor="#2DA5FC" />
    </LinearLayout>

</RelativeLayout>