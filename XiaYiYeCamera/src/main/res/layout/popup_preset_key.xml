<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/shape_pupview_bg"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_preset_set"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/click_btn_bg"
            android:padding="3dp"
            android:text="@string/btn_preset_set"
            android:textColor="@color/font_btn" />

        <Button
            android:id="@+id/btn_preset_call"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/click_btn_bg"
            android:padding="3dp"
            android:text="@string/btn_preset_call"
            android:textColor="@color/font_btn" />
    </LinearLayout>
    <TextView
        android:paddingTop="5dp"
        android:background="#cccccc"
        android:hint="@string/tip_perset_hint_input"
        android:textColor="#000000"
        android:textSize="13sp"
        android:gravity="center"
        android:maxLength="3"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/pnk_num">
    </TextView>
    <LinearLayout
        android:id="@+id/ll_keyboard"
        android:visibility="gone"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="2dp"
        android:id="@+id/ll_one"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <Button
            android:id="@+id/btn_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_key_num"
            android:text="1"
            android:textColor="#444444"
            android:layout_marginRight="2dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="2"
            android:textColor="#444444"
            android:layout_marginRight="2dp"
            android:background="@drawable/selector_key_num"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_there"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="3"
            android:textColor="#444444"
            android:background="@drawable/selector_key_num"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_height="40dp">
        <Button
            android:id="@+id/btn_four"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="4"
             android:textColor="#444444"
            android:layout_marginRight="2dp"
            android:background="@drawable/selector_key_num"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_five"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="5"
             android:textColor="#444444"
            android:layout_marginRight="2dp"
            android:background="@drawable/selector_key_num"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_six"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="6"
             android:textColor="#444444"
             android:background="@drawable/selector_key_num"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_there"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_height="40dp">
        <Button
            android:id="@+id/btn_seven"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="7"
             android:textColor="#444444"
            android:layout_marginRight="2dp"
            android:background="@drawable/selector_key_num"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/btn_eight"
            android:text="8"
             android:textColor="#444444"
            android:layout_marginRight="2dp"
            android:background="@drawable/selector_key_num"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/btn_nine"
            android:text="9"
             android:textColor="#444444"
             android:background="@drawable/selector_key_num"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_four"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_height="40dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/finish"
            android:textColor="#444444"
            android:visibility="invisible"
            android:layout_marginRight="2dp"
            android:background="@drawable/selector_key_num"
            android:id="@+id/btn_done"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
             android:textColor="#444444"
            android:layout_marginRight="2dp"
            android:background="@drawable/selector_key_num"
            android:id="@+id/btn_zero"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/delete"
             android:textColor="#444444"
             android:background="@drawable/selector_key_num"
            android:id="@+id/btn_delete"
            android:layout_height="match_parent" />

    </LinearLayout>
    </LinearLayout>

</LinearLayout>
