<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="20dp"
    android:orientation="vertical">
    
    <TextView 
        android:id="@+id/pup_vo_item_tv_state"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        />
    <TextView 
        android:id="@+id/pup_vo_item_tv_time"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        />
    

    <Button
        android:id="@+id/btn_play_video_online"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:background="@drawable/click_btn_bg"
        android:text="@string/btn_play_video_online"
        android:textColor="@color/font_btn" />

    <Button
        android:id="@+id/btn_downlinad_video_online"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:background="@drawable/click_btn_bg"
        android:text="@string/btn_download_local_video"
        android:textColor="@color/font_btn" />

    <Button
        android:id="@+id/btn_downlinad_video_cancel"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/click_btn_bg"
        android:text="@string/cancel"
        android:textColor="@color/font_btn" />

</LinearLayout>